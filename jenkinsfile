pipeline {
    agent any

    tools {
        maven 'Maven'   
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pranay12e/Hello-world.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
       stage('Upload to Artifactory') {
            steps {
                rtUpload (
                    serverId: 'my-artifactory', // Your configured server ID in Jenkins
                    spec: """{
                        "files": [
                            {
                                "pattern": "target/*.war",
                                "target": "libs-release-local/myapp/"
                            }
                        ]
                    }"""
                )
            }
        }
  stage('Deploy to Tomcat') {
            steps {
                bat '''
                REM Create temp folder
                if not exist C:\\temp mkdir C:\\temp

                REM Download WAR from Artifactory
                jfrog rt download "libs-release-local/myapp/*.war" "C:\\temp\\myapp.war" --server-id=my-artifactory

                REM Copy WAR to Tomcat webapps folder
                copy /Y C:\\temp\\myapp.war "C:\\apache-tomcat-9.0.108\\webapps\\myapp.war"

                echo Deployment complete. Please start Tomcat manually.
                '''
            }
        }

    }

    post {
        success {
            echo '✅ Build and Test Successful!'
        }
        failure {
            echo '❌ Build Failed!'
        }
    }
}
