pipeline {
    agent any

    tools {
        maven 'Maven'   
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pranay12e/Hello-world.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Upload to Artifactory') {
            steps {
                rtUpload (
                    serverId: 'my-artifactory',
                    spec: """{
                        "files": [
                            {
                                "pattern": "target/*.war",
                                "target": "libs-release-local/myapp/"
                            }
                        ]
                    }"""
                )
            }
        }

        stage('Deploy to Tomcat on EC2') {
            steps {
                sshagent(['ec2-key']) {
                    bat '''
                        bash -c "jfrog rt download \\"libs-release-local/myapp/*.war\\" target/"
                        bash -c "scp -o StrictHostKeyChecking=no target/*.war ec2-user@<EC2_PUBLIC_IP>:/opt/tomcat9/webapps/myapp.war"
                        bash -c "ssh -o StrictHostKeyChecking=no ec2-user@<EC2_PUBLIC_IP> \\"sudo systemctl restart tomcat\\""
                    '''
                }
            }
        }
    }
}

