pipeline {
    agent any

    tools {
        maven 'Maven'   
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pranay12e/Hello-world.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

    }

    post {
        success {
            echo '✅ Build and Test Successful!'
        }
        failure {
            echo '❌ Build Failed!'
        }
    }
}
