pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pranay12e/Hello-world.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Upload to Artifactory') {
            steps {
                rtUpload (
                    serverId: 'my-artifactory',
                    spec: """{
                        "files": [
                            {
                                "pattern": "target/*.war",
                                "target": "libs-release-local/myapp/"
                            }
                        ]
                    }"""
                )
            }
        }

        stage('Deploy to EC2 Tomcat') {
            steps {
                // Download WAR to Jenkins workspace (Windows)
                rtDownload (
                    serverId: 'my-artifactory',
                    spec: """{
                        "files": [
                            {
                                "pattern": "libs-release-local/myapp/*.war",
                                "target": "target/"
                            }
                        ]
                    }"""
                )

                // Use scp + ssh from Jenkins (Windows -> EC2)
                withCredentials([sshUserPrivateKey(credentialsId: 'ec2-key', keyFileVariable: 'KEYFILE', usernameVariable: 'USER')]) {
                    sh """
                        scp -i $KEYFILE -o StrictHostKeyChecking=no target/*.war $USER@3.7.46.195:/opt/tomcat9/webapps/myapp.war
                        ssh -i $KEYFILE -o StrictHostKeyChecking=no $USER@3.7.46.195 "sudo systemctl restart tomcat"
                    """
                }
            }
        }
    }
}


