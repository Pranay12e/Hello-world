pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pranay12e/Hello-world.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Upload to Artifactory') {
            steps {
                rtUpload (
                    serverId: 'my-artifactory',
                    spec: """{
                        "files": [
                            {
                                "pattern": "target/*.war",
                                "target": "libs-release-local/myapp/"
                            }
                        ]
                    }"""
                )
            }
        }

        stage('Deploy to Tomcat on EC2') {
            steps {
                rtDownload (
                    serverId: 'my-artifactory',
                    spec: """{
                        "files": [
                            {
                                "pattern": "libs-release-local/myapp/*.war",
                                "target": "C:/temp/myapp.war"
                            }
                        ]
                    }"""
                )

                // Send WAR file to EC2 Tomcat webapps folder
                bat '''
                scp -i "C:/keys/myec2-key.pem" "C:/temp/myapp/myapp.war" ec2-user@3.7.46.195:/opt/tomcat9/webapps/myapp.war
                ssh -i "C:/keys/myec2-key.pem" ec2-user@3.7.46.195 "sudo systemctl restart tomcat"
                '''
            }
        }
    }
}



