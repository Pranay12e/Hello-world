pipeline {
    agent any

    tools {
        maven 'Maven'   
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pranay12e/Hello-world.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
       stage('Upload to Artifactory') {
            steps {
                rtUpload (
                    serverId: 'my-artifactory', // Your configured server ID in Jenkins
                    spec: """{
                        "files": [
                            {
                                "pattern": "target/*.war",
                                "target": "libs-release-local/myapp/"
                            }
                        ]
                    }"""
                )
            }
        }
 stage('Deploy to Tomcat') {
    steps {
        rtDownload (
            serverId: 'my-artifactory',
            spec: """{
                "files": [
                    {
                        "pattern": "libs-release-local/myapp/*.war",
                        "target": "C:/temp/myapp.war"
                    }
                ]
            }"""
        )

        bat 'copy /Y C:\\temp\\myapp.war "C:\\apache-tomcat-9.0.108\\webapps\\myapp.war"'
        echo 'Deployment complete. Please start Tomcat manually.'
    }
}


    }

    post {
        success {
            echo '✅ Build and Test Successful!'
        }
        failure {
            echo '❌ Build Failed!'
        }
    }
}
